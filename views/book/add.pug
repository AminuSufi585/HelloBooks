extends ../layouts/dashboard

block dep_css
  
block dep_js
  
block contentarea
  <div class="mb-5">
  <h4 class="title mb-2 mr-4">Add a book</h4>
  <div class="mb-4"><small>Add a book</small></div>
  <div class="form-group">
  <input type="text" class="form-control" placeholder="Book title">
  </div><!--form-group-->
  <div class="row">
  <div class="col-sm-6">
  
  <div class="form-group">
  <textarea class="form-control" placeholder="Short description about this book" rows="5" style="min-height: 308px;"></textarea>
  </div>
  </div><!--col-->
  <div class="col-sm-6">
  <div class="form-group">
  <input type="text" class="form-control" placeholder="Book author">
  </div><!--form group-->
  <div class="form-group">
  <input type="date" class="form-control" placeholder="Release date">
  </div><!--form group-->
  <div class="form-group">
  <input type="text" class="form-control" placeholder="Book url">
  </div>
  <div class="form-group">
  <input type="number" class="form-control" placeholder="Number of copies">
  </div>
  <div class="form-group">
  <input type="date" class="form-control" placeholder="Stock date">
  </div>
  <div class="form-group">
  <select class="form-control">
  <option value="">Please select a category...</option>
  for n in [...Array(4).keys()]
    <option value="">Category #{n+1}</option>
  </select>
  </div>
  </div><!--col-sm-6-->
  </div><!--row-->
  <div class="row mb-5">
  <div class="col-sm-3 col-9">
  <div id="image-cropper" class="hidden-xl-down">
  <div class="preview"></div>
  </div><!--image-cropper-->
  </div>
  <div class="col-sm-3 col-3 justify-content-center">
  <button class="btn btn-sm btn-default" href="javascript:void(0);" onclick="triggerUpload('imagefile')" style="position:absolute; z-index:10; right:50px;"><i class="fa fa-camera"> </i> <span class="hidden-xs-down">Add book image</span></button><div style="height: 0px; width: 0px;overflow:hidden;"><form><input id="imagefile" type="file" value="upload" class="cropit-image-input"/></form></div>	
  </div><!--col-->
  </div>
  <div class="d-flex justify-content-center">
  <button type="button" class="btn btn-sm btn-success mr-4">Add</button>
  <button type="reset" class="btn btn-sm btn-danger">Reset</button>
  </div>
  </div>