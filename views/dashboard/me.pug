extends ../layouts/dashboard

block contentarea
  <div class="row align-items-top" id="borrowBook">
  <div class="col-sm-4 mt-4 px-0 px-sm-3">
  <div class="card mb-3">
  <div class="text-center"><img class="card-img-top avatar mt-3" src="/images/user.png" alt="Card image cap"></div>
  <div class="card-block">
  <h6 class="card-title"><i class="fa fa-user"></i> Fadojutimi Temitayo</h6>
  <p class="card-text"><i class="fa fa-envelope"></i> My email address</p>
  <a href="javascript:void(0)" onclick="$('#changePassword').toggleClass('hidden-xl-down');" class="card-link" data-toggle="tooltip" title="Change your password"><i class="fa fa-key"></i> Change password</a>
  <div id="changePassword" class="mt-4 hidden-xl-down">
  <form action="/login" method="post">
  <div class="form-group">
  <label class="sr-only">Current password</label>
  <div class="input-group mb-2 mr-sm-2 mb-sm-0">
  <div class="input-group-addon form-control-sm bg-danger text-white"><i class="fa fa-key"></i></div>
  <input type="password" class="form-control form-control-sm" placeholder="Current password">
  </div>
  </div><!--form-group-->
  <div class="form-group">
  <label class="sr-only">New password</label>
  <div class="input-group mb-2 mr-sm-2 mb-sm-0">
  <div class="input-group-addon form-control-sm bg-info text-white"><i class="fa fa-keyboard-o"></i></div>
  <input type="password" class="form-control form-control-sm" placeholder="New password">
  </div>
  </div><!--form-group-->
  <div class="form-group">
  <label class="sr-only">New password again</label>
  <div class="input-group mb-2 mr-sm-2 mb-sm-0">
  <div class="input-group-addon form-control-sm bg-info text-white"><i class="fa fa-keyboard-o"></i></div>
  <input type="password" class="form-control form-control-sm" placeholder="New password again">
  </div>
  </div><!--form-group-->
  <div class="form-group text-center">
  <button type="button" class="btn btn-sm btn-success btn-block" name="button">Change password</button>
  </div>
  </form>
  </div>
  </div>
  </div><!--card-->
  </div>
  <div class="col-sm-8">
  <h6 class="title">I'm yet to return...</h6>
  <div class="row">
  <div class="card-columns">
  for n in [...Array(6).keys()]
    <div class="card mb-3">
    <img class="card-img-top" src="/images/banner.png" alt="Card image cap">
    <div class="card-block">
    <h4 class="card-title">Book title</h4>
    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
    </div>
    </div><!--card-->
  </div><!--card-columns-->
  <button type="button" class="btn btn-primary bg-light btn-block mb-3">See more</button>
  </div><!--row-->
  </div>
  </div><!--row-->
